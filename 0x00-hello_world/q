#include <stdio.h>
/**
 * main - Entry point
 * Description: 'use of sizeof'
 * return 0;
 */
int main(void)
{
	char age;
	int aged;
	long int ages;
	long long int ag;
	float agem;

	printf("Size of a char: %d bytes \n", sizeof(age));
	printf("Size of a int: \n", sizeof(aged));
	printf("Size of a long int: \n", sizeof(ages));
	printf("Size of a long long int: \n", sizeof(ag));
	printf("Size of a float: \n", sizeof(agem));

	return (0);
}
